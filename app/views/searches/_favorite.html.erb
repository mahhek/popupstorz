<%if !current_user%>
  <%= link_to image_tag("/assets/star_empty.png", :width => "18", :height => "18", :alt => "Add to Favorites"), "#", :onclick=> "return no_login()" %>
<%elsif current_user.favorites.include?(item)%>
  <%= link_to image_tag("/assets/blue-star.jpg", :width => "18", :height => "18", :alt => "Add to Favorites"), remove_from_favorite_item_path(item), :class => "linkAddRmFavorite", :style => "padding-top:0px !important", :remote => true %>
<%else%>
  <%= link_to image_tag("/assets/star_empty.png", :width => "18", :height => "18", :alt => "Add to Favorites"), add_to_favorite_item_path(item), :class => "linkAddRmFavorite", :style => "padding-top:0px !important", :remote => true %>
<%end%>
<script>
  function no_login()
  {
    alert("You should login to use this feature");
    return false;
  }
</script>