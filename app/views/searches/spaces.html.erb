  <h2 style="font-size: 1.4em; font-weight: normal; font-family: proxima-semibold;">
    <%= t(:refine_search) %>
  </h2>
  <%= form_tag "/search_spaces", {:remote => true, :method => :get,:pars => params, :id => "price_range_form" } do %>
