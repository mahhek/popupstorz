        <% end %>
      </div>
    </div>

    <div class="pannelright">
      <img class="closepannel" src="../assets/-.png" />

      <div class="heading_right"><%= t(:shareable) %></div>
      <div class="twocol">
        <%= check_box_tag "shared", true, "", :checked => true, :onclick => "$(this.form).trigger('submit.rails')"  %><span style="float: none;">Yes</span>
        <%= check_box_tag "not_shared", true, "", :checked => true, :onclick => "$(this.form).trigger('submit.rails')"  %><span style="float: none;">No</span>
  <%#= radio_button_tag "spaces","shareable", true,:name => "shareable",:checked => params[:shareable]? true : false,  :value => true ,:class => "radio", :onclick => "$(this.form).trigger('submit.rails')" %>
