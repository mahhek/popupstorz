<div id="get-list-header">
  <h2><%= t(:all_feedbacks)%></h2>
</div>
<div style="float:left;width: 100%;margin-bottom: 20px;margin-top: 20px;margin-left: 10px;">
  <%= form_for :search, :url => all_feedbacks_admin_users_path, :remote => true do |f| %>
    <span><%= t(:sort_by) %></span>  
    <%= select_tag "sort_option", options_for_select([[t(:by_date) ,"1"],[t(:by_name) ,"2"]], params[:sort_option]), :prompt => "Sort By",:onchange => "$(this.form).submit()" %>
  <% end %>
</div>
<div class="listx-bg" id="admin_feedbacks_list">
  <%= render :partial => "feedbacks", :locals => {:comments => @comments} %>
</div>