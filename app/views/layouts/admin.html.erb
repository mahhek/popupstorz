<!DOCTYPE html>
<html>
  <head>
    <title><%= t(:popup) %></title>
    <script type='text/javascript' src='http://code.jquery.com/jquery-1.7.1.js'></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.js"></script>    <!-- jsFiddle -->
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.17/themes/base/jquery-ui.css"/> <!-- jsFiddle -->
    <link rel="stylesheet" type="text/css" href="http://static.jquery.com/ui/css/demo-docs-theme/ui.theme.css"/> <!-- jsFiddle -->
    
    <%= javascript_include_tag "https://js.stripe.com/v1/" %>
    <%= javascript_include_tag "application" %>
    <script src="http://maps.google.com/maps?file=api&amp;v=2&amp;key=AIzaSyAPEeqlhndG4KU6-bRWegIBrs-v-kFcdgY"
    type="text/javascript"></script>
    <script src="http://www.facebook.com/assets.php/en_US/all.js" type="text/javascript"></script>

    <%= javascript_include_tag "geoRssOverlay" %>
    <%= javascript_include_tag "markerGroup" %>
    <%= javascript_include_tag "ym4r-gm" %>
    <%= javascript_include_tag "jquery.datepick" %>


    <%= GMap.header(:with_vml => false, :host => request.host).html_safe %>
    <%= raw(@map.to_html) if @map %>
    <%= csrf_meta_tags %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
    <%= yield(:head) %>

  </head>
  <body>
    
     <div class='spread'>
      <div class='twshare left'> 
        <%= params[:controller] %>
        <a href="http://twitter.com/share?text=aaaaaaaaaa" class="twitter-share-button" data-count="horizontal" data="qqqqqqqq"><%= t(:tweet1) %></a>
        <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
      </div>
    </div>
    
    <div>
      <%= t(:admin_panel) %> &nbsp;|&nbsp;
      <% if user_signed_in? %>
        <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>&nbsp;|&nbsp;
      <% end %>
      <br/>
      <br/>
      <%= link_to t(:all_users), admin_users_path %>&nbsp;|&nbsp;
      <%= link_to t(:all_listings), admin_items_path %>&nbsp;|&nbsp;
      <%= link_to t(:create_listings), '/items/new' %>&nbsp;|&nbsp;
      <%= link_to t(:manage_listings), admin_items_path %>&nbsp;|&nbsp;
      <%= link_to t(:create_users), new_user_registration_path %>&nbsp;|&nbsp;
      <%= link_to t(:ownership), admin_items_path %>&nbsp;|&nbsp;
      <%= link_to t(:commision), admin_items_path %>&nbsp;|&nbsp;
      <%= link_to t(:specific_listing), admin_items_path %>&nbsp;|&nbsp;
      <%= link_to t(:edit_listing), admin_items_path %>&nbsp;|&nbsp;
      <%= link_to t(:delete_users) , admin_users_path %>&nbsp;|&nbsp;
      <%= link_to t(:delete_booking), admin_items_path %>&nbsp;|&nbsp;
      <%= link_to t(:delete_listing), "/delete_listings" %>&nbsp;|&nbsp;
      <%= link_to t(:validate_guest), admin_items_path %>
    </div>


    <% if notice %>
      <p class="notice" style="padding: 5px;width :95%;float:left; background-color:lightgreen;"><%= notice %></p>
    <% end %>
    <% if   alert %>
      <p class="notice" style="padding: 5px;width :95%;float:left; background-color:red;"><%= alert %></p>
    <% end %>
    <%= yield %>

  </body>
</html>